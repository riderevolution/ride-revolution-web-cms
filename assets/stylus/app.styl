/**
 * Animation */
.fade-enter-active,
.fade-leave-active
    transition: all .3s ease-in-out

.fade-enter,
.fade-leave-to
    opacity: 0

.page-enter-active,
.page-leave-active
    transition: all .3s ease-in-out

.page-enter,
.page-leave-to
    transform: translateX(100px)
    opacity: 0

.slide-enter-active,
.slide-leave-active
    transition: all .2s ease-in-out

.slide-enter,
.slide-leave-to
    opacity: 0
    transform: translateY(-20px)

.fade_in
    animation: fade_in .3s

.fade_out
    animation: fade_out .3s

.slide_in
    animation: slide_in .3s

.slide_up
    animation: slide_up .3s

/**
 * Fade */
@keyframes fade_in {
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }
}

@keyframes fade_out {
	from {
		opacity: 1
    }
	to {
		opacity: 0
    }
}

/**
 * Slide In */
@keyframes slide_in {
	from {
		opacity: 0
        transform: translateX(50px)
    }
	to {
		opacity: 1
        transform: translateX(0px)
    }
}

/**
 * Slide In x */
@keyframes slide_in_x {
	from {
		opacity: 0
        transform: translate(50px, -50%)
    }
	to {
		opacity: 1
        transform: translate(0, -50%)
    }
}

/**
 * Slide In y */
@keyframes slide_in_y {
	from {
		opacity: 0
        transform: translate(-50%, -50px)
    }
	to {
		opacity: 1
        transform: translate(-50%, -50%)
    }
}

/**
 * Slide Up */
@keyframes slide_up {
	from {
		opacity: 0
        transform: translateY(-50px)
    }
	to {
		opacity: 1
        transform: translateY(0px)
    }
}

/**
 * Blinking */
@keyframes blink {
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }
}

@keyframes dash
    from {
        stroke-dashoffset: 500
    }
    to {
        stroke-dashoffset: 0
    }
