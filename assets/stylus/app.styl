/**
 * Close Icon **/
.close_wrapper
    position: absolute
    top: 0
    right: 0
    left: 0
    height: 100%
    z-index: 1
    background-color: rgba(0, 0, 0, 0.5)
    margin: 0 5px
    &.alternate
        top: 50%
        left: unset
        margin: 0
        width: 25px
        height: 25px
        background-color: $red
        border-radius: 50%
        transform: translateY(-50%)
        .close_icon
            top: 50%
            left: 0
            right: 0
            margin: 0 auto
            text-align: center
            transform: translateY(-50%)
            &::before,
            &::after
                top: calc(0% + 3px)
                right: 0
                left: 0
                margin: 0 auto
                height: 13px
            &::before
                transform: rotate(45deg)
            &::after
                transform: rotate(-45deg)
    .close_icon
        cursor: pointer
        position: absolute
        width: 20px
        height: 20px
        top: calc(0% + 10px)
        right: calc(0% + 10px)
        z-index: 3
        &::before
            content: ''
            position: absolute
            top: 0
            right: calc(0% + 8px)
            width: 2px
            height: 20px
            background-color: $white
            transform: rotate(45deg)
        &::after
            content: ''
            position: absolute
            top: 0
            right: calc(0% + 8px)
            width: 2px
            height: 20px
            background-color: $white
            transform: rotate(-45deg)

