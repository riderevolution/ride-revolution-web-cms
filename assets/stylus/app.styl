@import 'fonts'

light_green()
    color: #E2FDF9

green()
    color: #33B09D

white()
    color: #FFF

black()
    color: #383D40

black_alternate()
    color: #777

gray()
    color: #91939B

html
    -ms-text-size-adjust: 100%
    -webkit-text-size-adjust: 100%
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased
    box-sizing: border-box

*,
*:before,
*:after
  box-sizing: border-box
  margin: 0

h1
    font-weight: normal

/**
 * Global */

.field_btn_red
    sf_pro_regular(14px)
    text-decoration: none
    outline: none
    box-shadow: none
    color: #F3525C
    padding: 7px 15px
    border-radius: 2px
    border: 1px solid #FFE5E6
    background-color: #FFE5E6
    text-align: center
    transition: .3s ease-in-out
    &:hover,
    &:focus
        color: #FFE5E6
        background-color: #F3525C
        transition: .3s ease-in-out

/**
 * HeaderNav */
.header
    position: fixed
    top: 0
    left: 0
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: flex-end
    background-color: #FFF
    width: 100%
    .header_icons
        padding-right: 30px
        img
            margin: 0 10px
            cursor: pointer
            &:last-child
                margin: 0
    .header_user
        position: relative
        padding: 20px 60px 20px 30px
        border-left: 1px solid #E2E2E2
        display: flex
        flex-flow: row wrap
        align-items: center
        cursor: pointer
        user-select: none
        .user_picture
            background-color: #33B09D
            width: 38px
            height: 38px
            border-radius: 50%
            margin-right: 15px
        .user_name
            sf_pro_regular(16px)
            black_alternate()
        .user_select
            position: absolute
            right: 0
            top: calc(100% + 30px)
            z-index: 1
            width: 100%
            padding: 10px 0 20px
            background-color: #fff
            opacity: 0
            visibility: hidden
            box-shadow: 15px 25px 40px rgba(0, 0, 0, 0.05)
            transition: all .2s ease-in-out
            a
                text-decoration: none
                outline: none
                &.select_item
                    display: block
                    sf_pro_regular(16px)
                    black_alternate()
                    padding: 10px 30px
                    background-color: transparent
                    border-left: 2px solid transparent
                    transition: .3s ease-in-out
                    &:hover,
                    &:focus
                        background-color: #E2FDF9
                        border-left: 2px solid #33B09D
                        transition: .3s ease-in-out
            .select_footer
                margin-top: 10px
                padding: 0 30px
                .field_btn_red
                    width: 100%
                    display: block
        &.active
            .user_select
                top: calc(100% + 0px)
                visibility: visible
                opacity: 1
                transition: all .2s ease-in-out

/**
 * Footer */
.footer
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: space-between
    padding: 20px 40px
    background-color: #fff
    .footer_label
        sf_pro_light(14px)
        gray()

.image_responsive
    max-width: 100%
    vertical-align: middle

#container
    display: flex
    flex-flow: row wrap
    padding-top: 78px
    .navbar_container
        display: block
        width: 100%
        max-width: 265px
        height: 100vh
        flex: 0 0 auto
        .navbar
            position: fixed
            top: 0
            left: 0
            z-index: 2
            height: 100%
            border: 1px solid #E2E2E2
            .logo
                display: flex
                flex-flow: row wrap
                align-items: center
                justify-content: center
                margin: 30px 40px 30px 20px
                .logo_title
                    neutra_text(18px)
                    black()
                    text-transform: uppercase
                    letter-spacing: 2px
                    padding-left: 5px
            .nav_list
                position: relative
                list-style: none
                padding: 0
                height: 100%
                .item_wrapper
                    .nav_item
                        sf_pro_light(16px)
                        black()
                        display: block
                        position: relative
                        padding: 20px 30px 20px 60px
                        border-left: 2px solid transparent
                        background-color: transparent
                        text-decoration: none
                        outline: none
                        z-index: 0
                        background-position: calc(0% + 20px) calc(50%)
                        background-repeat: no-repeat
                        background-size: 20px
                        transition: .3s ease-in-out
                        & ~ .sub_wrapper
                            position: absolute
                            top: 0
                            right: -50px
                            width: 100%
                            max-width: 200px
                            height: 100%
                            overflow: hidden
                            visibility: hidden
                            opacity: 0
                            z-index: 1
                            background-color: #E2FDF9
                            transition: all .3s ease-in-out
                            &:hover,
                            &:focus
                                visibility: visible
                                opacity: 1
                                right: 0
                                transition: all .3s ease-in-out
                        &.dashboard
                            background-image: url('/icons/navbar/dashboard-unselected.png')
                        &.booker
                            background-image: url('/icons/navbar/booker-unselected.png')
                        &.scheduler
                            background-image: url('/icons/navbar/scheduler-unselected.png')
                        &.customers
                            background-image: url('/icons/navbar/customers-unselected.png')
                        &.instructors
                            background-image: url('/icons/navbar/instructors-unselected.png')
                        &.supplies
                            background-image: url('/icons/navbar/supplies-unselected.png')
                        &.reporting
                            background-image: url('/icons/navbar/reporting-unselected.png')
                        &.admin
                            background-image: url('/icons/navbar/admin-unselected.png')
                        &.active,
                        &.nuxt-link-exact-active,
                        &:hover,
                        &:focus
                            background-color: #E2FDF9
                            border-left: 2px solid #33B09D
                            transition: .3s ease-in-out
                            &.dashboard
                                background-image: url('/icons/navbar/dashboard-selected.png')
                            &.booker
                                background-image: url('/icons/navbar/booker-selected.png')
                            &.scheduler
                                background-image: url('/icons/navbar/scheduler-selected.png')
                            &.customers
                                background-image: url('/icons/navbar/customers-selected.png')
                            &.instructors
                                background-image: url('/icons/navbar/instructors-selected.png')
                            &.supplies
                                background-image: url('/icons/navbar/supplies-selected.png')
                            &.reporting
                                background-image: url('/icons/navbar/reporting-selected.png')
                            &.admin
                                background-image: url('/icons/navbar/admin-selected.png')
                        &:hover
                            & ~ .sub_wrapper
                                visibility: visible
                                opacity: 1
                                right: 0
                                transition: all .3s ease-in-out
                    .sub_wrapper
                        .sub_nav_list
                            list-style: none
                            padding: 0
                            .sub_item_wrapper
                                .sub_nav_item
                                    display: block
                                    sf_pro_light(16px)
                                    black()
                                    text-decoration: none
                                    outline: none
                                    padding: 20px
                                    background-color: transparent
                                    transition: .3s ease-in-out
                                    &:hover,
                                    &:focus
                                        white()
                                        background-color: #33B09D
                                        transition: .3s ease-in-out
    .content
        position: relative
        z-index: -1
        flex: 1 auto
        background-color: #F8F8FB
